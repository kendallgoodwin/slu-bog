<h1>Creatures#edit</h1>

<%= link_to "Edit Creature", edit_creature_path(@creature.id), class: 'btn btn-default' %>

<%= form_for @creature do |c| %>
	
	<div>
		<%= c.label :name %>
		<%= c.text_field :name %>
	</div>	

	<div>
		<%= c.label :description %>
		<%= c.text_area :description %>
	</div>

	<%= c.submit %>
<% end %>
